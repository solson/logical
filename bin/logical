#!/usr/bin/env ruby
require 'logical'

if ARGV[0] == "repl"
  require 'ripl'
  Ripl.start
  exit
end

def ask(prompt)
  print prompt
  gets.chomp
end

loop do
  begin
    line = ask('> ')
  rescue StandardError, Interrupt
    puts
    exit
  end

  break if line == 'quit' or line == 'exit'

  begin
    ast = Logical::Parser.parse(Logical::Lexer.lex(line))
    puts ast.inspect + " => " + ast.evaluate({}).inspect
  rescue RLTK::NotInLanguage
    puts 'Line was not in language.'
  rescue => e
    puts e.message
  end
end
